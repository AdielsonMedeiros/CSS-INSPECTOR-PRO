{
  "manifest_version": 3,
  "name": "CSS Inspector Pro",
  "description": "Inspect CSS styles on hover. Copy CSS or Tailwind classes instantly.",
  "version": "0.1.0",
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ]
}
